<Window x:Class="WPFCRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCRUD"
        mc:Ignorable="d"
        Title="ListOfStudents" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel>
                <Button Click="OpenListOfStudents" DockPanel.Dock="Left">List of Students</Button>
            </StackPanel>
            <Label DockPanel.Dock="Right">Content</Label>
        </DockPanel>
    </Grid>
</Window>
